{
  "name": "karate-blackjack",
  "version": "1.0.0",
  "description": "A karate-themed browser-based blackjack game",
  "type": "module",
  "main": "js/main.js",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:fresh": "vitest run --coverage --clearCache",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write ."
  },
  "keywords": ["blackjack", "game", "karate", "cards"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@vitest/coverage-v8": "^2.1.0",
    "vitest": "^2.1.0"
  }
}
